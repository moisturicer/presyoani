{
  "name": "presyo-ani",
  "private": true,
  "version": "0.1.0",
  "description": "Offline-first mobile-primary app for farmers - PresyoAni",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "dev:mobile": "turbo run dev --filter=farmer-mobile",
    "dev:dashboard": "turbo run dev --filter=buyer-dashboard"
  },
  "devDependencies": {
    "turbo": "^2.3.0"
  },
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "leaflet": "^1.9.4"
  }
}
